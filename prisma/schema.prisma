model ConversationExample {
  id      Int              @id @default(autoincrement())
  title   String
  sentences String[]
  translations String[]
  level   ProficiencyLevel
}

enum ProficiencyLevel {
  Onigiri
  BentoBox
  Sakura
  Katana
  Kiku
}

enum Categories {
  Begruessung
  Vorstellung
  Einkaufen
  Reisen
  Freizeit
  Beziehungen
  Arbeit
  Gesundheit
  Wetter
  Kultur
  Sonstiges
}

model Notification {
  id Int @id @default(autoincrement())
  title String
  content String
  publishedAt DateTime @default(now())
}
